@model Users
@{
    Layout = "_LayoutProfileUser";
}
@{
    string rankFormat = $"{Model.Rank.Replace(" ", "_")}_Rank.png";
    //int torneosGanados = (int)ViewData["TORNEOSGANADOS"];
}
@section scriptUpdate{
<script>
    function UpdateProfile(uid){
        $.ajax({
            url: "/Users/UpdateProfile?uid=" + uid,
            success: (r) => {
                window.location =
                "/Users/UpdateProfile?uid=" + uid;
            },
        })
    } 
</script>
}
<div class="menu">
    <div class="menu-logo">
        <!-- <img src="./imgs/logo.svg" width="50px" height="50px" /> -->
        <h3 class="text-logo">
            <a asp-controller="Home" asp-action="Index">Atras</a>
        </h3>
    </div>
    <div class="button-container">
        <div class="a-borders">
        <a class="primary-button primary-background" asp-controller="Managed" asp-action="LogOut">
                Cerrar Sesion
            </a>
        </div>
    </div>
</div>

<h1 class="text-center mt-4 main-title-valo">Perfil</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-4">
        <img src="@Model.ImageLarge" />
        </div>
        <div class="col-8">
            <div class="row">
                <div class="col-6">
                    <h4 class="title-profile">Nombre</h4>
                <h3 class="text-profile">@Model.Name</h3>
                </div>
                <div class="col-6">
                    <h4 class="title-profile">Tag</h4>
                <h3 class="text-profile">@Model.Tag</h3>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-6">
                    <h4 class="title-profile">Rank</h4>
                    <div class="container-rank">
                    <h3 class="text-profile">@Model.Rank</h3>
                        
                        <img src="~/imgs/rangos/@rankFormat"
                                width="40" />
                    </div>
                </div>
                <div class="col-6">
                    <h4 class="title-profile">Torneos ganados</h4>
                    <h3 class="text-profile">0</h3>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-12">
                    <h4 class="title-profile">Email</h4>
                    <h3 class="text-profile">@Model.Email</h3>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-12">
                    <h4 class="title-profile">Contraseña</h4>
                    <h3 class="text-profile">
                        <a class="button-password">
                            Cambiar contrasena
                        </a>
                    </h3>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-12 mt-4">
                    <div class="button-container">
                        <div class="a-borders">
                        <a onclick="UpdateProfile('@Model.Uid')" class="secondary-button secondary-background">
                                Actualizar Perfil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
